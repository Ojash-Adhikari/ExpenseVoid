@inherits LayoutComponentBase
@using ExpenseVoid.Components.Pages
@inject IJSRuntime JSRuntime
@inject NavigationManager NavManager


<style>
    #vanta-bg {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
    }
</style>


<body style="font-family:'Retro Gaming';">

    @if (!isAuthenticated)
    {
        <div>
            @Body
        </div>
    }
    else
    {
        <div id="vanta-bg">

            <div class="sidebar">
                <NavMenu />

            </div>
        </div>

    }
</body>

@code{
    private bool isAuthenticated = false;
}