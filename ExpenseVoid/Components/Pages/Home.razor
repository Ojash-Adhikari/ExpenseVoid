<body>
    <!-- Header with navigation -->
    <header>
        <nav>
            <div class="logo">Expense<span>Void</span></div>
            <div class="menu-icon" id="menu-icon" aria-label="Toggle navigation menu" role="button" tabindex="0">
                <span class="nav-icon"></span>
            </div>
            <ul class="nav-links" id="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/About">About</a></li>
                <li><a href="/Finance">Financial Tips</a></li>
                <li><a href="/Login" class="pushable2">Login</a></li>
